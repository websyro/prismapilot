generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model Organization {
  id       String @id @default(cuid())
  name     String
  isActive Boolean @default(true)
  users    User[]
}

model User {
  id             String        @id @default(cuid())
  email          String        @unique
  name           String
  isActive       Boolean       @default(true)
  tenantId       String?
  deletedAt      DateTime?
  createdAt      DateTime      @default(now())
  organizationId String?
  organization   Organization? @relation(fields: [organizationId], references: [id])
  posts          Post[]
  sessions       Session[]
  orders         Order[]
}

model Post {
  id     String @id @default(cuid())
  title  String
  status String
  userId String
  user   User   @relation(fields: [userId], references: [id])
}

model Session {
  id       String @id @default(cuid())
  isActive Boolean @default(false)
  userId   String
  user     User   @relation(fields: [userId], references: [id])
}

model Order {
  id        String   @id @default(cuid())
  amount    Int
  status    String
  tenantId  String?
  deletedAt DateTime?
  createdAt DateTime @default(now())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
}

